<Window
    AllowsTransparency="True"
    Height="350"
    Icon="/Assets/Icon.png"
    ResizeMode="CanResizeWithGrip"
    Style="{DynamicResource MaterialDesignWindow}"
    Title="{Binding Localization.ExceptionOccured}"
    Width="500"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance Type=viewModel:ExceptionOccuredViewModel}"
    mc:Ignorable="d"
    x:Class="MaterialZip.View.ExceptionOccuredView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:MaterialZip.View.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:MaterialZip.ViewModel"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <controls:FastGrid RowDefinitions="Auto, *, Auto">
        <Border Grid.Row="0" Padding="16,12">
            <controls:FastGrid ColumnDefinitions="Auto, *, Auto">
                <materialDesign:PackIcon
                    Grid.Column="0"
                    Kind="AlertCircleOutline"
                    Margin="0,0,12,0"
                    VerticalAlignment="Center" />

                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Grid.Column="1"
                    Text="{Binding Localization.ExceptionOccured}"
                    VerticalAlignment="Center" />

                <Button
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Grid.Column="2"
                    Style="{StaticResource MaterialDesignIconButton}">
                    <materialDesign:PackIcon Kind="Close" />
                </Button>
            </controls:FastGrid>
        </Border>

        <Expander
            Grid.Row="1"
            Header="{Binding Localization.ShowMore}"
            Padding="10,0">
            <TextBox
                FontFamily="Consolas"
                FontSize="12"
                IsReadOnly="True"
                MaxHeight="200"
                Text="{Binding ExceptionString}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
        </Expander>
        <Border Grid.Row="2" Padding="8">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Command="{Binding CopyTraceCommand}"
                    Content="{Binding Localization.CopyStackTrace}"
                    Margin="0,0,8,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                <Button
                    Command="{Binding OpenLogsCommand}"
                    Content="{Binding Localization.OpenLogs}"
                    Margin="0,0,3,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                <materialDesign:PopupBox
                    IsPopupOpen="{Binding IsPopupVisible}"
                    PlacementMode="BottomAndAlignCentres"
                    PopupUniformCornerRadius="12"
                    StaysOpen="True">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentCopy" />
                        <TextBlock Text="Скопировано!" />
                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>
        </Border>
    </controls:FastGrid>
</Window>