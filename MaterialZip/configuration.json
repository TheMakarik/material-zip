{
  "ApplicationOptions": {
    "Language": "ru-RU",
    "Color": "DeepPurple",
    "HoverColorHex": "#b5b5b5",
    "GithubSourceLink": "https://github.com/TheMakarik/material-zip",
    "LastDirectory": "/",
    "WindowsExplorerPathInWindows": "/explorer.exe",
    "LogsPath": "/Logs"
  }, 
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": "Verbose",
    "Enrich": ["WithThreadId"],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm}] [Thread: {ThreadId}] [{Level}] [From: {SourceContext}] {Message:lj} {Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log_.txt",
          "outputTemplate":  "[{Timestamp:yyyy-MM-dd HH:mm}] [Thread: {ThreadId}] [{Level}] [From: {SourceContext}] {Message:lj} {Exception}{NewLine}",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}